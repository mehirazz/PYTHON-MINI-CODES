# temperature_converter.py
temp = float(input("Enter temperature: "))
unit = input("Convert to (C/F): ").upper()

if unit == "C":
    converted = (temp - 32) * 5/9
    print(f"{temp}째F = {converted:.2f}째C")
elif unit == "F":
    converted = (temp * 9/5) + 32
    print(f"{temp}째C = {converted:.2f}째F")
else:
    print("Invalid input.")
